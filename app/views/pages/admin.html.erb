<% if user_signed_in? %>

<div class="container">
			<header class="clearfix">
				<span>WorkHorse <span class="bp-icon bp-icon-about" data-content="The Blueprints are a collection of basic and minimal website concepts, components, plugins and layouts with minimal style for easy adaption and usage, or simply for inspiration."></span></span>
				<h1>Admin Page</h1>
				<nav>
					<%= link_to 'View Site', root_path %>
					<%= link_to 'My Account', edit_user_registration_path %>
				</nav>
			</header>	
			<div id="tabs" class="tabs">
			<nav>
					<ul>
						<li><a href="#section-1" class="icon-shop"><span>Beer</span></a></li>
						<li><a href="#section-2" class="icon-cup"><span>Drinks</span></a></li>
						<li><a href="#section-3" class="icon-food"><span>Food</span></a></li>
						<li><a href="#section-4" class="icon-lab"><span>Menu</span></a></li>
						<li><a href="#section-5" class="icon-truck"><span>Contact</span></a></li>
						<li><a href="#section-6" class="icon-truck"><span>Reviews</span></a></li>
						<li><a href="#section-7" class="icon-truck"><span>JukeBox</span></a></li>
						<li><a href="#section-8" class="icon-truck"><span>images</span></a></li>
            <li><a href="#section-9" class="icon-truck"><span>Employees</span></a></li>
					</ul>
				</nav>
				<div class="content">
					<section id="section-1">
						<% @beers.each do |beer| %>
                        <div class="mySection">
                          <span class="thumbImg"><%= image_tag beer.image.url(:original, timestamp: false) %></span>
                          <h2><a href="<%= beer.link %>"> <%= beer.description %></a></h2>
                              <% if beer.user == current_user %>
                                <%= link_to 'Edit', edit_beer_path(beer) %>
                                <%= button_to 'Destroy', beer, method: :delete, data: { confirm: 'Are you sure?' } %>
                                <% end %>
                            </div>
                            <% end %>
                            <%= link_to 'New Beer', new_beer_path %>
          </section>
					<section id="section-2">
						<% @drinks.each do |drink| %>
                          
                           
                              <h2><%= drink.description %></h2>
                              <% if drink.user == current_user %>
                                  <%= link_to 'Edit', edit_drink_path(drink) %>
                                  <%= button_to 'Destroy', drink, method: :delete, data: { confirm: 'Are you sure?' } %>
                                <% end %>
                            
                            <% end %>

                            <%= link_to 'New drink', new_drink_path %>
					</section>
					<section id="section-3">
						<% @foods.each do |food| %>
                          
                           
                              <h2><%= food.description %></h2>
                              <% if food.user == current_user %>
                                  <%= link_to 'Edit', edit_food_path(food) %>
                                  <%= button_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %>
                                <% end %>
                            
                            <% end %>

                            <%= link_to 'New dish', new_food_path %>
					</section>
					<section id="section-4">
						<% @menus.each do |menu| %>
                           
                              <p><%= raw menu.menu_br %></p>
                              <% if menu.user == current_user %>
                                  <%= link_to 'Edit', edit_menu_path(menu) %>
                                <% end %>
                            <% end %>
					</section>
					<section id="section-5">
						<% @phones.each do |phone| %>
                          
                           
                              <h2><%= phone.description %></h2>
                              <% if phone.user == current_user %>
                                  <%= link_to 'Edit', edit_phone_path(phone) %>
                                <% end %>
                            
                        <% end %>
						<% @emails.each do |email| %>
                          
                           
                              <h2><a href="mailto:<%= email.description %>"><%= email.description %></a></h2>
                              <% if email.user == current_user %>
                                  <%= link_to 'Edit', edit_email_path(email) %>
                                <% end %>
                            
                        <% end %>
						<% @addresses.each do |address| %>
                          
                           
                              <h2><%= address.description %></h2>
                              <% if address.user == current_user %>
                                  <%= link_to 'Edit', edit_address_path(address) %>
                                <% end %>
                            
                        <% end %>
					</section>
					<section id="section-6">
						<% @reviews.each do |review| %>
                          
                           
                              <h2><%= review.description %></h2>
                              <% if review.user == current_user %>
                                  <%= link_to 'Edit', edit_review_path(review) %>
                                  <%= button_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %>
                                <% end %>
                            
                        <% end %>

                        <%= link_to 'New review', new_review_path %>
					</section>
					<section id="section-7">
						<% @jukeboxes.each do |jukebox| %>
                          
                           
                              <h2><%= jukebox.description %></h2>
                              <% if jukebox.user == current_user %>
                                  <%= link_to 'Edit', edit_jukebox_path(jukebox) %>
                                  <%= button_to 'Destroy', jukebox, method: :delete, data: { confirm: 'Are you sure?' } %>
                                <% end %>
                            
                        <% end %>

                        <%= link_to 'New jukebox', new_jukebox_path %>
					</section>
					<section id="section-8">
						<% @images.each do |image| %>
                          
                           <%= image_tag image.image.url(:original, timestamp: false) %>
                              <h2><%= image.description %></h2>
                              <% if image.user == current_user %>
                                  <%= link_to 'Edit', edit_image_path(image) %>
                                  <%= button_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %>
                                <% end %>
                            
                        <% end %>

                        <%= link_to 'New photo', new_image_path %>
					</section>
          <section id="section-8">
            <% @employees.each do |employee| %>
                          
                           
                              <h2><%= employee.description %></h2>
                              <% if employee.user == current_user %>
                                  <%= link_to 'Edit', edit_employee_path(employee) %>
                                  <%= button_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %>
                                <% end %>
                            
                        <% end %>

                        <%= link_to 'New photo', new_employee_path %>
          </section>
				</div><!-- /content -->
			</div><!-- /tabs -->
			<p class="info">Developed by <a href="http://ledbetterlife.com">Joshua Ledbetter</a></p>
		</div>
		<script src="js/cbpFWTabs.js"></script>
		<script>
			new CBPFWTabs( document.getElementById( 'tabs' ) );
		</script>

  <% else %>

  You best sign in boy

  <% end %>